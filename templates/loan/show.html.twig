{% extends 'base.html.twig' %}

{% block title %}Loan Detail{% endblock %}

{% block body %}
    <h1>Loan Detail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ loan.name }}</td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td>{{ loan.birthDate ? loan.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ loan.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ loan.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ loan.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ loan.city }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ loan.province }}</td>
            </tr>
            <tr>
                <th>Monthly Net Income</th>
                <td>{{ loan.monthlyNetIncome }}</td>
            </tr>
            <tr>
                <th>Loan Amount</th>
                <td>{{ loan.loanAmount }}</td>
            </tr>
            <tr>
                <th>Loan Term</th>
                <td>{{ loan.loanTerm }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('loan_index') }}">Back to list</a>

    <a href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>

    {{ include('loan/_delete_form.html.twig') }}
{% endblock %}
