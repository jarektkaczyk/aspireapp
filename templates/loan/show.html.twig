{% extends 'base.html.twig' %}

{% block title %}Loan Detail{% endblock %}

{% block body %}
    <h1>Loan Detail</h1>

    <div class="btn-block pull-right">
        {{ include('loan/_repay_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ loan.name }}</td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td>{{ loan.birthDate ? loan.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ loan.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ loan.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ loan.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ loan.city }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ loan.province }}</td>
            </tr>
            <tr>
                <th>Monthly Net Income</th>
                <td>{{ loan.monthlyNetIncome }}</td>
            </tr>
            <tr>
                <th>Loan Amount</th>
                <td>{{ loan.loanAmount }}</td>
            </tr>
            <tr>
                <th>Loan Term</th>
                <td>{{ loan.loanTerm }}</td>
            </tr>
            <tr>
                <th>Interest rate</th>
                <td>{{ loan.interestRate}}%</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ loan.statusLabel}}</td>
            </tr>
            {% if (loan.isApproved) %}
                <tr>
                    <th>First repayment date</th>
                    <td>{{ loan.firstRepaymentDate ? loan.firstRepaymentDate|date('Y-m-d') : ''}}</td>
                </tr>
                <tr>
                    <th>Next repayment date</th>
                    <td>{{ loan.nextRepaymentDate ? loan.nextRepaymentDate|date('Y-m-d') : ''}}</td>
                </tr>
            {% endif%}
        </tbody>
    </table>
    <a href="{{ path('loan_index') }}">Back to list</a>
{% endblock %}
